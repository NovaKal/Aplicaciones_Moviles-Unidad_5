<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About"
    android:background="@drawable/app_background_1" >

  <ImageButton
      android:id="@+id/about_imageButton_exit"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:backgroundTint="@android:color/transparent"
      android:contentDescription="@string/home_button_exit_desc"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.045"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.019"
      app:srcCompat="@drawable/back_small" />

  <TextView
      android:id="@+id/about_title_textView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="Memory Race"
      android:textSize="28sp"
      android:textStyle="bold"
      android:textColor="#000000"
      android:lineSpacingExtra="8dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@id/about_description_textView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <TextView
      android:id="@+id/about_description_textView"
      android:layout_width="280dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginEnd="32dp"
      android:gravity="center"
      android:text="This app is designed to improve our memory capacity and cognitive skills. Enjoy the challenge of finding pairs of upside-down cards and sharpen your memory while having fun! Created by Kevin and David for the Aplicaciones Moviles course."
      android:textSize="20sp"
      android:textColor="#000000"
      android:lineSpacingExtra="8dp"
      app:layout_constraintTop_toBottomOf="@id/about_title_textView"
      app:layout_constraintBottom_toTopOf="@id/about_footer_textView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <TextView
      android:id="@+id/about_footer_textView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="Universidad Pontificia Bolivariana - 2023"
      android:textSize="14sp"
      android:textColor="#000000"
      android:lineSpacingExtra="8dp"
      app:layout_constraintTop_toBottomOf="@id/about_description_textView"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>